# ARES Environment Configuration
# Copy this file to .env and customize as needed

# Node.js Environment
NODE_ENV=production

# Service Ports
PARSER_PORT=8000
GRAPHQL_PORT=4000
METRICS_PORT=4100
UI_PORT=3000

# Watch Service Configuration
WATCH_INTERVAL_MS=3000
REBUILD_DEBOUNCE_MS=5000

# Service URLs (internal Docker networking)
PARSER_URL=http://parser:8000
GRAPHQL_URL=http://api:4000/graphql

# Confidence Thresholds (defined in config/pipeline.json, can be overridden)
# CONFIDENCE_ACCEPT=0.7
# CONFIDENCE_REVIEW=0.4

# UI Configuration
UI_POLL_MS=2000
UI_PROJECT_DEFAULT=default

# Data Persistence (optional: map to host directories)
# DATA_DIR=./data
# INCOMING_DIR=./incoming
# WIKI_DIR=./wiki

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Optional: Telemetry & Observability
# OTLP_ENDPOINT=http://jaeger:4318
# ENABLE_TRACING=false

# Optional: Rate Limiting
# RATE_LIMIT_WINDOW_MS=60000
# RATE_LIMIT_MAX_REQUESTS=100
