{
  "name": "ares",
  "version": "0.1.0",
  "description": "Rule-first knowledge engine for extracting entities, relations, and events from long texts",
  "main": "app/engine/orchestrator.ts",
  "scripts": {
    "build": "npx esbuild scripts/start-server-and-worker.ts --platform=node --format=cjs --bundle --outfile=dist/start-server-and-worker.js --external:better-sqlite3 --external:uuid --external:@apollo/server --external:prom-client --external:pino --external:lunr --packages=external && mkdir -p dist && cp app/api/schema.graphql dist/schema.graphql",
    "start": "npm run build && node dist/start-server-and-worker.js",
    "start:compiled": "node dist/start-server-and-worker.js",
    "parser": "cd app/services && uvicorn parser:app --host 127.0.0.1 --port 8000",
    "dev": "ts-node app/ui/server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ladder": "vitest run tests/ladder/level-1-simple.spec.ts tests/ladder/level-2-multisentence.spec.ts tests/ladder/level-3-complex.spec.ts tests/ladder/level-5-cross-document.spec.ts tests/ladder/level-5b-performance.spec.ts tests/ladder/level-5c-new-entities.spec.ts",
    "test:ladder:1": "vitest run tests/ladder/level-1-simple.spec.ts",
    "test:ladder:2": "vitest run tests/ladder/level-2-multisentence.spec.ts",
    "test:ladder:3": "vitest run tests/ladder/level-3-complex.spec.ts",
    "test:ladder:5a": "vitest run tests/ladder/level-5-cross-document.spec.ts",
    "test:ladder:5b": "vitest run tests/ladder/level-5b-performance.spec.ts",
    "test:ladder:5c": "vitest run tests/ladder/level-5c-new-entities.spec.ts",
    "validate:golden": "node scripts/validate-ares-golden.js tests/golden_truth",
    "validate:golden:cp": "node scripts/validate-ares-golden.js tests/golden_truth --codepoints",
    "test:mega": "vitest run tests/mega/mega-regression.spec.ts",
    "fiction:ch2": "MODULE_PATH=./app/engine/fiction-extraction ts-node --transpile-only --compiler-options '{\"module\":\"CommonJS\",\"moduleResolution\":\"Node\"}' scripts/run-fiction-ch2.ts",
    "run:barty-full": "ts-node --transpile-only scripts/run-barty-full.ts",
    "build:worker": "esbuild scripts/job-worker.ts --platform=node --format=cjs --bundle --outfile=dist/scripts/job-worker.js --external:better-sqlite3",
    "worker": "npm run build:worker && node dist/scripts/job-worker.js"
  },
  "keywords": [
    "knowledge-graph",
    "nlp",
    "entity-extraction",
    "relation-extraction"
  ],
  "author": "ARES Team",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^5.1.0",
    "@codemirror/autocomplete": "^6.19.0",
    "@codemirror/commands": "^6.9.0",
    "@codemirror/lang-markdown": "^6.4.0",
    "@codemirror/language": "^6.11.3",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.6",
    "@fastify/static": "^6.12.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-trace-base": "^2.1.0",
    "@types/lunr": "^2.3.7",
    "better-sqlite3": "^12.4.1",
    "body-parser": "^2.2.0",
    "chokidar": "^3.5.3",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "fastify": "^4.25.0",
    "graphql": "^16.11.0",
    "lunr": "^2.3.9",
    "ollama": "^0.5.0",
    "pino": "^9",
    "prom-client": "^15.1.3",
    "uuid": "^9.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.8",
    "esbuild": "^0.21.5",
    "jsdom": "^27.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  }
}
